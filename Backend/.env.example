
# .env.example
NODE_ENV=development
PORT=5000
DATABASE_FILE=./db/database.db

# JWT Secrets (in production use strong random strings)
JWT_ACCESS_SECRET=your_strong_jwt_access_secret_key
JWT_REFRESH_SECRET=your_strong_jwt_refresh_secret_key
JWT_RESET_SECRET=your_strong_jwt_reset_secret_key

# JWT Expiration times
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_RESET_EXPIRATION=1h

# Admin user credentials for initial setup
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_password_in_production

# CORS (for production, specify your frontend URL)
FRONTEND_URL=http://localhost:3000

# For logging
LOG_LEVEL=info

# Rate limiting
RATE_LIMIT_WINDOW_MS=15
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5